<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/bottomDialogTitleTextStyle"
            android:gravity="center_horizontal"
            tools:text="Instant Transfer Successful" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/bottomDialogMessageTextStyle"
            tools:text="You've successfully transferred N20 to 0123456789 (Chike Mgbemena of GTBank)" />

        <View style="@style/bottomDialogButtonDividerStyle" />


        <include
            android:id="@+id/bottom_btns"
            layout="@layout/dialog_bottom_btns"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_main"
            style="@style/notificationTopImageStyle"
            app:cardBackgroundColor="@color/green">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_check_white_24dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>