<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_16"
    android:layout_marginBottom="4dp">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="@dimen/dimen_16"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_10">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:contentDescription="@string/new_arrival_product"
                android:padding="@dimen/dimen_12"
                tools:src="@drawable/stir_fry" />


            <TextView
                android:id="@+id/user_product_name_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_image"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/khula_bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:text="Spaghetti" />


            <TextView
                android:id="@+id/retail_product_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_product_name_item_text"
                android:layout_marginStart="@dimen/dimen_16"
                android:fontFamily="@font/khula"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                tools:text="#2,999" />

            <TextView
                android:id="@+id/order_now_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_product_name_item_text"
                android:layout_alignBaseline="@id/retail_product_price_text"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="@dimen/dimen_15"
                android:layout_toEndOf="@id/retail_product_price_text"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/khula"
                android:gravity="center"
                android:paddingStart="@dimen/dimen_15"
                android:paddingTop="5dp"
                android:paddingEnd="@dimen/dimen_15"
                android:paddingBottom="5dp"
                android:text="@string/order_now"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

