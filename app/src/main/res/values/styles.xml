<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="onBoardingTextTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="radioRealButtonGroupStyle">
        <item name="rrbg_backgroundColor">#E8E9E9</item>
        <item name="rrbg_checkedPosition">0</item>
        <item name="rrbg_radius">28dp</item>
        <item name="rrbg_selectorColor">@color/purple</item>
        <item name="rrbg_selectorFullSize">true</item>
        <item name="rrbg_selectorRadius">28dp</item>
        <item name="rrbg_animateTexts_enter">overshoot</item>
        <item name="rrbg_animateTexts_enterDuration">500</item>
        <item name="rrbg_animateTexts_textColorFrom">@color/dark_cyan_blue</item>
        <item name="rrbg_animateTexts_textColorTo">@color/white</item>
        <item name="rrbg_animateTexts_textColor_duration">500</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="radioRealButtonStyle">
        <item name="rrb_textSize">12sp</item>
        <item name="rrb_drawableHeight">36dp</item>
        <item name="rrb_drawableWidth">36dp</item>
        <item name="rrb_ripple">false</item>
    </style>

    <style name="editText">
        <item name="android:maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:drawablePadding">@dimen/spacing_middle</item>
        <item name="android:paddingLeft">@dimen/spacing_middle</item>
        <item name="android:paddingEnd">@dimen/spacing_middle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/medium_gray</item>
    </style>


    <style name="newButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/new_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/spacing_middle</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/spacing_mxlarge</item>
    </style>

    <style name="newButton_v2" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/new_button_v2</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/spacing_middle</item>

        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/spacing_mxlarge</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="bottomDialogButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notificationTopImageStyle">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="cardCornerRadius">32dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_middle</item>
    </style>

    <style name="bottomDialogButtonTextStyle_v2">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/purple</item>
    <item name="android:textStyle">bold</item>
    </style>

    <style name="bottomDialogButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#FBFBFB</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>



</resources>